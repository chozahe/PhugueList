
{% extends 'base.html.twig' %}

{% block title %}Создание задачи{% endblock %}

{% block body %}
    <section class="section">
        <div class="container  is-max-desktop">
            <h1 class="title is-3 has-text-weight-bold mb-5">Создать задачу</h1>

            <div class="box has-background-dark">
                {{ form_start(form) }}

                <div class="field mb-5">
                    {{ form_label(form.name, 'Название', {'label_attr': {'class': 'label has-text-light'}}) }}
                    <div class="control">
                        {{ form_widget(form.name, {'attr': {'class': 'input'}}) }}
                    </div>
                    {% for error in form.name.vars.errors %}
                        <div class="mt-2">
                            <span class="tag is-danger is-medium">{{ error.message }}</span>
                        </div>
                    {% endfor %}
                </div>

                <div class="field mb-5">
                    {{ form_label(form.description, 'Описание', {'label_attr': {'class': 'label has-text-light'}}) }}
                    <div class="control">
                        {{ form_widget(form.description, {'attr': {'class': 'input'}}) }}
                    </div>
                    {% for error in form.description.vars.errors %}
                        <div class="mt-2">
                            <span class="tag is-danger is-medium">{{ error.message }}</span>
                        </div>
                    {% endfor %}
                </div>

                <div class="field mb-5">
                    {{ form_label(form.deadline, 'Срок выполнения', {'label_attr': {'class': 'label has-text-light'}}) }}
                    <div class="control">
                        {{ form_widget(form.deadline, {'attr': {'class': 'input'}}) }}
                    </div>
                    {% for error in form.deadline.vars.errors %}
                        <div class="mt-2">
                            <span class="tag is-danger is-medium">{{ error.message }}</span>
                        </div>
                    {% endfor %}
                </div>

                <div class="field is-grouped mt-6">
                    <div class="control">
                        <button type="submit" class="button is-primary is-medium">Сохранить</button>
                    </div>
                    <div class="control">
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}
